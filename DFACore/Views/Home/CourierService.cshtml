@*@model DFACore.Models.DTO.ApplicantModelDTO*@

<div class="pageContainers px-0" id="application-form" style="padding: 20px;
        height: auto;min-height:450px;">

    <p style=" margin-bottom: 2rem;">
        <span class="float-left grey-text-bold font-weight-bold p-0 p-label">
            @User.Identity.Name<br />
            @DateTime.Now.ToString("MMMM dd yyy HH:mm tt")
        </span>
        <span class="float-right mt-auto p-label">
            <a class="text-uppercase" asp-action="LogOff" asp-controller="Account" style="font-weight:bold;">Logout</a>
        </span>
    </p>


    <div id="documentLocation" class="bg-light mb-3 w-100  mt-4 d-flex flex-column justify-content-center">
        <div class=" w-100 mx-auto px-4">
            <div class="bold text-center mt-4">
                Would you like to avail the document pick-up and delivery services?
                <br />
                Additional fees may apply.
            </div>

            <div class="p-alt text-center mt-3 p-label">
                <i>
                    Nais mo bang mag-avail ng servisyo sa pagpick-up at paghatid ng documento?
                    <br />
                    May karagdagang bayad ang serbisyong ito.
                </i>
            </div>

            <div class="hide-on-small">
                <div class="card-body px-5 py-5 d-flex w-100">
                    <button asp-controller="Home" asp-action="siteselection" id="courier-yes" class="courier-btn btn btn-primary text-uppercase ml-auto mr-3">Yes</button>
                    <button asp-controller="Home" asp-action="siteselection" id="courier-no" class="courier-btn btn btn-secondary text-uppercase mr-auto ml-3">No</button>
                </div>
            </div>
            <div class="show-on-small-only mt-5">
                <button asp-controller="Home" asp-action="siteselection" id="courier-yes" class="courier-btn btn btn-primary text-uppercase w-100 mb-4">Yes</button>
                <button asp-controller="Home" asp-action="siteselection" id="courier-no" class="courier-btn btn btn-secondary text-uppercase w-100">No</button>
            </div>
        </div>
    </div>
</div>

<script src="~/js/courierservice.js"></script>

