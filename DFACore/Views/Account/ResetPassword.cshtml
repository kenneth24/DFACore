                    <span toggle="#password-field" class="fa fa-fw fa-eye field_icon toggle-confirmpassword float-right" style="position: relative;top: -24px;right: 10px;"></span>
                    @*<span asp-validation-for="ConfirmPassword" class="text-danger"></span>*@
