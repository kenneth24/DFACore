                <div asp-validation-summary="All" class="text-danger"></div>
                <br >

                <div class="row">
                    <div class="col-md-2 col-sm-1"></div>
                    <div class="col-md-8 col-sm-10">
                        <button type="submit" class="btn btn-primary col-md-12 col-sm-12 font-weight-bold" style="background-color:#217ff3;">Submit</button>
                    </div>
                    <div class="col-md-2 col-sm-1"></div>
                </div>
            </form>
        </div>

    </div>

    <div class="col-md-3 col-sm-0">
