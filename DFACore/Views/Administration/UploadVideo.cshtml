@model DFACore.Models.ImageModel

@{
    Layout = "~/Views/Shared/_AdministrationLayout.cshtml";
    ViewData["Title"] = "Upload Video";

}


<div style="margin-top:50px;">

    <div class="row">
        <div class="col-sm-12">
            <a asp-action="UploadImage" class="btn btn-primary pull-right">Update Images</a>
        </div>

    </div>

    <div class="row justify-content-center">
        <div class="col-6">
            <h3>Update Video</h3>
            @if (ViewData["UploadImageMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @ViewData["UploadImageMessage"]
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>

            }
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col-md-6 col-sm-10">
            <form asp-action="UploadVideo" enctype="multipart/form-data" id="priceForm" method="post" style="border: 1px solid #b7b7b7;height: auto;">
                <div style="background-color: #217ff3;color: white;height: 35px;">
                    <p class="text-left " style="padding: 8px;font-weight:600;font-size:16px;">Set Apostille Video</p>
                </div>
                <div asp-validation-summary="All" class="text-danger" style="margin-top:20px;"></div>
                <div style="padding:10px;">

                    <div class="form-group">
                        <label class="black-text">Upload New Video</label> <br />
                        <input asp-for="Name" value="APOSTILLE" hidden />
                        <input asp-for="File" accept="mp4" />
                        <span asp-validation-for="File" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">Upload</button>
                    </div>
                </div>

            </form>
        </div>

    </div>


</div>

@section Scripts {

}

