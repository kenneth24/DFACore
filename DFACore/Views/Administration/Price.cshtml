@using Newtonsoft.Json;
@using System.Collections.Generic;
@model DFACore.Models.Price

@{
    Layout = "~/Views/Shared/_AdministrationLayout.cshtml";
    ViewData["Title"] = "Price";
}


<div style="margin-top:50px;">


    <div class="row justify-content-center">
        <div class="col-6">
            <h3>Set Price</h3>
            @if (ViewData["UpdatePriceMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @ViewData["UpdatePriceMessage"]
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>

            }
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col-md-6 col-sm-10">
            <form asp-action="Price" id="priceForm" method="post" style="border: 1px solid #b7b7b7;height: auto;">
                <div style="background-color: #217ff3;color: white;height: 35px;">
                    <p class="text-left " style="padding: 8px;font-weight:600;font-size:16px;">Set Price</p>
                </div>
                <div asp-validation-summary="All" class="text-danger" style="margin-top:20px;"></div>
                <div style="padding:10px;">
                    @Html.HiddenFor(model => model.Id)
                    <div class="form-group">
                        <label class="black-text" asp-for="Expedite"></label>
                        <input asp-for="Expedite" class="form-control black-text" />
                        <span asp-validation-for="Expedite" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="black-text" asp-for="Regular"></label>
                        <input asp-for="Regular" class="form-control black-text" />
                        <span asp-validation-for="Regular" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">Update</button>
                    </div>
                </div>

            </form>
        </div>

    </div>


</div>

