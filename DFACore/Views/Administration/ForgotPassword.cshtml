@model DFACore.Models.ForgotPasswordViewModel

@{
    Layout = "~/Views/Shared/_AdministrationLayout.cshtml";
    ViewData["Title"] = "Forgot your password?";
}
<div class="row pageContainers">
    <div class="col-md-3 col-sm-1">
    </div>
    <div class="col-md-6 col-sm-10">
        <div style="border: 1px solid #b7b7b7;height:auto;">
            <div style="background-color: #217ff3;color: white;height: 35px;">
                <p class="text-left " style="padding: 8px;font-weight:600;font-size:16px;">Enter your email address</p>
            </div>
            <div style="padding:30px;">
                <form method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        @*<label asp-for="Email"></label>*@
                        <input asp-for="Email" class="form-control" placeholder="Email Address" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="row">
                        <div class="col-md-2 col-sm-1"></div>
                        <div class="col-md-8 col-sm-10">
                            <button type="submit" class="btn btn-primary col-md-12 col-sm-12" style="background-color:#217ff3;">Submit</button>
                        </div>
                        <div class="col-md-2 col-sm-1"></div>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="col-md-3 col-sm-1">
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
