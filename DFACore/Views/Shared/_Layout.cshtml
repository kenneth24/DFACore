        function resize() {
            var winHeight = $(window).height();
            $(".modal-autoheight .modal-body").css({
                width: "auto",
                height: (winHeight - 200) + "px"
            });
        }

        let stickyHeader = $('.hdr');

        $(window).resize(function () {
