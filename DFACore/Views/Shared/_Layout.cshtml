    <script>
        // call timerInterval function every 1 minute if mouse in idle
        // validate if no. of minutes idle is > 9
        // if true, logoff user
        let baseUrl = urlBase;

        var idleInterval = null;
        var idleTime = 0;

        $(document).ready(function () {
            idleInterval = setInterval(timerIncrement, 60000); // 1m
            //alert(urlBase);
            $(this).mousemove(function (e) {
                idleTime = 0;
            });
            $(this).keypress(function (e) {
                idleTime = 0;
            });
        });

        function timerIncrement() {
            var userAuthorized = @User.Identity.IsAuthenticated.ToString().ToLower();
            if (userAuthorized) {
                idleTime += 1;
                console.log(idleTime);
                if (idleTime > 9) {
                    clearInterval(idleInterval);
                    window.alert('You have been logged out due to inactivity!');
                    window.location = `${urlBase}Account/LogOff`;
                }
            }
        }

        $(function () {
            if ($(".modal-autoheight").length > 0) {
                $(".modal").on("show.bs.modal", resize);
