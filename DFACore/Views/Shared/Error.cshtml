@model ErrorViewModel
@{
    ViewData["Title"] = "Error";

}


<div class="row">
    <div class="col-12 mx-auto">
        <h2 class="text-danger text-center" style="margin-top:150px;">An error occurred while processing your request.</h2>
        <p class="text-danger">@ViewBag.errorMessage</p>
    </div>
</div>

