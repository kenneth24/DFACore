        .appointMentTable {
            font-size: 14px;
        }

        .appointMentValue {
            font-weight: bold;
        }

        .customTable table, th, td {
            border: 0px solid black;
            border-collapse: collapse;
        }

            .customTable table td {
                padding: 5px;
            }

        .parentTable {
            border: 0 solid black;
            border-collapse: collapse;
        }

        .borderless td {
            border: none;
        }

        .borderless td {
            padding: 1px;
            vertical-align: top;
        }

        .padding30 {
            padding-left: 10px !important;
        }

        p {
            margin-top: 0;
            margin-bottom: 0;
        }
        hr {
            border: 1px solid #D3D3D3;
            border-radius: 5px;
