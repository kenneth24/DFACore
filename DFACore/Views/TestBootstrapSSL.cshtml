@model DFACore.Models.ApplicantRecord
@{
    Layout = null;
    var sched = Model.ScheduleDate;
    var docuData = Newtonsoft.Json.JsonConvert.DeserializeObject<List<ApostilleDocumentModel>>(Model.ApostileData);
    var suffix = Model.Suffix != "N/A" ? Model.Suffix : "";
}
