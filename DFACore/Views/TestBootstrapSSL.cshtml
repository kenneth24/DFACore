<body>

    <div class="container">

        <div style="padding-left:10px;padding-right:10px;">
            <div class="row">
                <p class="text-right">@Model.DateCreated.ToString("MMMM dd, yyyy")</p>
            </div>
            <div class="row">
                <p>
                    Dear <span style="font-weight:bold">@Model.Title @Model.FirstName?.ToUpper() @Model.MiddleName?.ToUpper() @Model.LastName?.ToUpper() @suffix</span>, <br />
                    Your application has been successfully confirmed.
                </p>


                <table style="width: 100%;">
                    <tr style="border:none">
                        <td style="border:none;">
                            <div class="customTable">
                                <table style="width:100%">
                                    <tbody>
                                        <tr style="padding-left:10px!important">
                                            <td style="vertical-align: top; padding-left: 20px;">
                                                <span class="appointMentTable">Appointment Code</span><br />
                                                <span class="appointMentValue">@Model.ApplicationCode</span>
                                            </td>
                                            <td style="vertical-align: top; padding-left: 20px;">
                                                <span class="appointMentTable">Appointment Date</span><br />
                                                <span class="appointMentValue">@sched.ToString("MMMM dd, yyyy")</span>
                                            </td>
                                            <td style="vertical-align: top; padding-left: 20px;">
                                                <span class="appointMentTable">Time</span><br />
                                                <span class="appointMentValue">@sched.ToString("hh:mm tt")</span>
                                            </td>

                                        </tr>
                                        <tr>
                                            <td colspan="3" style="vertical-align: top; padding-left: 20px;">
                                                <span class="appointMentTable">Processing Site</span><br />
                                                <span class="appointMentValue">@Model.ProcessingSite</span><br />
                                                <span class="appointMentTable">@Model.ProcessingSiteAddress</span>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>

                        </td>
                        <td style="border: none; text-align: right; vertical-align: central;" width="200">
                            <img src="@String.Format("data:image/png;base64,{0}", Convert.ToBase64String(Model.QRCode))" height="180" width="180" />
                        </td>

                    </tr>

                </table>




                @*<p style="color:red;font-weight:bold;font-size:15px;margin-top:5px;">IMPORTANT REMINDER: Be at the DFA Processing Site at least 1 hour BEFORE your scheduled appointment.</p>*@


            </div>

            <div class="row">

            </div>

            <div class="row">
                <div>
                    <p style="font-weight:bold;font-size:22px;margin-top:20px;">Summary of Application</p> <br />
                    <table class="borderless">

                        <tr>
                            <td>
                                <table class="borderless">
                                    <tbody>
                                        <tr>
                                            <td style="width:200px!important;">Document Owner:</td>
                                            <td class="padding30" style="width:500px;"> @Model.FirstName?.ToUpper() @Model.MiddleName?.ToUpper() @Model.LastName?.ToUpper() @suffix</td>
                                        </tr>
                                        @*<tr>
                                            <td>Address:</td>
                                            <td class="padding30">@Model.Barangay?.ToUpper() @Model.City?.ToUpper() @Model.Region?.ToUpper()</td>
                                        </tr>*@
                                        @if (string.IsNullOrEmpty(Model.NameOfRepresentative))
                                        {
                                            <tr>
                                                <td>Contact No.:</td>
                                                <td class="padding30">@Model.ContactNumber</td>
                                            </tr>
                                        }
                                        @if (!string.IsNullOrEmpty(Model.NameOfRepresentative))
                                        {
                                            <tr>
                                                <td>Authorized Representative:</td>
                                                <td class="padding30">@Model.NameOfRepresentative?.ToUpper()</td>
                                            </tr>
                                            <tr>
                                                <td>Contact No.:</td>
                                                <td class="padding30">@Model.RepresentativeContactNumber?.ToUpper()</td>
                                            </tr>
                                        }

                                        @*<tr>
                                            <td>Company/Office:</td>
                                            <td class="padding30">@Model.CompanyName?.ToUpper()</td>
                                        </tr>*@
                                        <tr>
                                            <td>Country of Destination:</td>
                                            <td class="padding30">@Model.CountryDestination?.ToUpper()</td>
                                        </tr>
                                        <tr>
                                            <td>Type of Document/s:</td>
                                            <td class="padding30">
                                                @foreach (var item in docuData)
                                                {
                                                    <span>(@item.Quantity)</span> <span>(</span><span>@item.Transaction?.ToUpper()</span><span>)</span> <span>@item.Name?.ToUpper()</span> <br />
                                                }

                                            </td>
                                        </tr>
                                        <tr>
                                            <td>Total Fees:</td>
                                            <td class="padding30">PhP @Model.Fees?.ToUpper()<span>.00</span></td>
                                        </tr>
                                    </tbody>
                                </table>
                            </td>
                            @*<td>

                                <img src="@String.Format("data:image/png;base64,{0}", Convert.ToBase64String(Model.QRCode))" height="180" width="180" />
                            </td>*@
                        </tr>

                    </table>

                </div>
            </div>

